{
  "compilerOptions": {
    "target": "es6",   
    "module": "commonjs",  
    "rootDir": "./src", 
    "declaration": true,  
    "sourceMap": true,                           
    "outDir": "./dist",    
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,     
    "strict": true,      
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}
